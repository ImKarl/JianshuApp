<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="?card_corner"
                android:paddingLeft="13.0dip"
                android:paddingTop="20.0dip"
                android:paddingRight="13.0dip"
                android:paddingBottom="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="225.0dip"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@id/collect_icon"
        android:layout_width="62.0dip"
        android:layout_height="62.0dip"
        android:src="@drawable/zt_image"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        app:riv_border_width="0.0dip"
        app:riv_border_color="@drawable/selector_color_tran_theme"
        app:riv_oval="true"/>

    <include
        android:id="@id/container_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        layout="@layout/include_scribe_button"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/container_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_above="@id/container_subscribe"
        android:layout_centerHorizontal="true">

        <TextView
            android:textSize="12.0sp"
            android:textColor="?text_color_2"
            android:id="@id/text_collect_user"
            android:singleLine="true"
            style="@style/dimen_ww"/>

        <TextView
            android:textSize="12.0sp"
            android:textColor="?text_color_1"
            android:id="@id/text_fix"
            android:layout_marginLeft="10.0dip"
            android:text="@string/bian"
            android:singleLine="true"
            style="@style/dimen_ww"/>
    </LinearLayout>

    <TextView
        android:textSize="16.0sp"
        android:textColor="?text_color_1"
        android:gravity="center_horizontal"
        android:id="@id/text_collection_title"
        android:layout_marginBottom="10.0dip"
        android:maxLines="2"
        android:layout_above="@id/container_user"
        android:layout_centerHorizontal="true"
        style="@style/dimen_ww"/>
</RelativeLayout>