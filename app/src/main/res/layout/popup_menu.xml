            android:paddingLeft="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/display_mode"/>
    </LinearLayout>

    <View
        android:id="@id/v_line_submission"
        android:background="?separate_line_color_1"
        android:layout_width="fill_parent"
        android:layout_height="0.6dip"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/menu_submission"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zw_icon_collectionsettings"/>

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_b1_dark"
            android:id="@id/tv_feedback"
            android:paddingLeft="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submission_manage"/>
    </LinearLayout>

    <View
        android:id="@id/v_line_del"
        android:background="?separate_line_color_1"
        android:layout_width="fill_parent"
        android:layout_height="0.6dip"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/menu_del"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zw_icon_delete"/>

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_b1_dark"
            android:paddingLeft="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shan_chu"/>
    </LinearLayout>

    <View
        android:id="@id/v_line_report"
        android:background="?separate_line_color_1"
        android:layout_width="fill_parent"
        android:layout_height="0.6dip"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/menu_report"
        android:paddingLeft="10.0dip"
