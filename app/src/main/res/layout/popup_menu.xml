        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_b1_dark"
            android:paddingLeft="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report"/>
    </LinearLayout>
