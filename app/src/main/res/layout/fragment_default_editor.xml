<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@id/container"
             android:background="?common_bg_white_black"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20.0sp"
            android:textColor="?color_978582_71"
            android:layout_gravity="center_horizontal"
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_your_share"/>

        <TextView
            android:textSize="14.0sp"
            android:textColor="?color_978582_71"
            android:gravity="center"
            android:id="@id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:text="@string/start_writting_tips"/>

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57.0dip"
            android:src="?image_writting_bg"/>

        <TextView
            android:textSize="14.0sp"
            android:textColor="@color/theme_color"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@id/tv_download"
            android:background="?likes_count_bg"
            android:layout_width="250.0dip"
            android:layout_height="47.0dip"
            android:layout_marginTop="49.0dip"
            android:text="@string/download_editor"/>
    </LinearLayout>
</FrameLayout>