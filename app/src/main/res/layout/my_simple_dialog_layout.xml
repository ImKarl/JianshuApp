<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:id="@id/rootView"
              android:background="?common_bg_white_black"
              android:layout_width="320.0dip"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textColor="@color/theme_color"
        android:id="@id/tv_title"
        android:paddingLeft="20.0dip"
        android:paddingTop="20.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <FrameLayout
        android:paddingLeft="20.0dip"
        android:paddingTop="24.0dip"
        android:paddingRight="20.0dip"
        android:paddingBottom="24.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16.0sp"
            android:textColor="?text_color_1"
            android:layout_gravity="center"
            android:id="@id/tv_content"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLines="100"/>

        <EditText
            android:textSize="16.0sp"
            android:textColor="?text_color_1"
            android:layout_gravity="center|left"
            android:id="@id/edit_info"
            android:background="#00000000"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nickname_hint"
            android:singleLine="true"
            android:maxLength="15"
            android:inputType="text"
            android:imeOptions="actionDone"/>
    </FrameLayout>

    <TextView
        android:textColor="@color/theme_color"
        android:gravity="center"
        android:id="@id/tv_error"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickname_hint"/>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="?text_color_1"
            android:gravity="center"
            android:id="@id/tv_negative"
            android:paddingTop="16.0dip"
            android:paddingBottom="16.0dip"
            android:visibility="visible"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/cancel_modification"
            android:layout_weight="1.0"/>

        <View
            android:background="?listview_divider"
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"/>

        <TextView
            android:textColor="?text_color_1"
            android:gravity="center"
            android:id="@id/tv_positive"
            android:paddingTop="16.0dip"
            android:paddingBottom="16.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="@string/submit_modification"
            android:layout_weight="1.0"/>
    </LinearLayout>
</LinearLayout>