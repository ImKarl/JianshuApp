<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="?common_bg_white_black"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/linear_alipay"
        android:background="?press_selector"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16.0sp"
            android:textColor="?text_color_1"
            android:gravity="center_vertical"
            android:id="@id/tv_alipay"
            android:paddingTop="12.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="10.0dip"
            android:text="@string/alipay"
            android:layout_weight="1.0"/>

        <TextView
            android:gravity="center"
            android:id="@id/tv_selector_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:drawableLeft="@drawable/selector_collection_acceptable"/>
    </LinearLayout>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/linear_wx"
        android:background="?press_selector"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16.0sp"
            android:textColor="?text_color_1"
            android:gravity="center_vertical"
            android:id="@id/tv_wx_wallet"
            android:paddingTop="12.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="10.0dip"
            android:text="@string/wx_wallet"
            android:layout_weight="1.0"/>

        <TextView
            android:gravity="center"
            android:id="@id/tv_selector_wx_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:drawableLeft="@drawable/selector_collection_acceptable"/>
    </LinearLayout>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/linear_jianshu"
        android:background="?press_selector"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16.0sp"
            android:textColor="?text_color_1"
            android:gravity="center_vertical"
            android:id="@id/tv_jianshu_balane"
            android:paddingTop="12.0dip"
            android:paddingBottom="12.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="10.0dip"
            android:text=""
            android:layout_weight="1.0"/>

        <TextView
            android:gravity="center"
            android:id="@id/tv_selector_jianshu_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:drawableLeft="@drawable/selector_collection_acceptable"/>
    </LinearLayout>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@id/linear_progress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@id/progressBar"
            android:paddingTop="10.0dip"
            android:paddingBottom="10.0dip"
            layout="@layout/progressbar_small"/>
    </LinearLayout>
</LinearLayout>