<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="?common_bg_light"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        android:background="?common_bg_white_black"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/titlebar_height"
        android:minHeight="@dimen/titlebar_height"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        app:navigationIcon="@drawable/zw_icon_back"/>

    <View
        android:id="@id/titlebar_separate_line"
        android:background="?separate_line_color_1"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/separate_line_height"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="?shape_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_marginRight="20.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48.0dip">

            <ImageView
                android:id="@id/iv_phone"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:layout_marginLeft="20.0dip"
                android:src="@drawable/icon_phone"
                android:layout_centerVertical="true"/>

            <TextView
                android:gravity="center_vertical"
                android:id="@id/tv_country_code"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20.0dip"
                android:text="+86"
                android:layout_toRightOf="@id/iv_phone"/>

            <ImageView
                android:id="@id/iv_phone_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:src="@drawable/icon_phone_arrow"
                android:layout_toRightOf="@id/tv_country_code"
                android:layout_centerVertical="true"/>

            <View
                android:id="@id/view_line"
                android:background="?separate_line_color"
                android:layout_width="0.6dip"
                android:layout_height="20.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@id/iv_phone_arrow"
                android:layout_centerVertical="true"/>

            <EditText
                android:textSize="16.0sp"
                android:textColor="?text_color_1"
                android:textColorHint="?text_color_2"
                android:gravity="center_vertical"
                android:id="@id/et_account"
                android:background="@null"
                android:paddingLeft="10.0dip"
                android:paddingRight="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="40.0dip"
                android:minWidth="150.0dip"
                android:hint="@string/tel_number"
                android:singleLine="true"
                android:layout_toRightOf="@id/view_line"
                android:inputType="phone"
                android:imeOptions="actionNext"/>

            <ImageView
                android:id="@id/iv_delete_tel"
                android:background="?press_selector"
                android:padding="16.0dip"
                android:visibility="invisible"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:src="@drawable/icon_delete"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:background="?separate_line_color"
            android:layout_width="fill_parent"
            android:layout_height="0.6dip"/>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="18.0dip"
                android:layout_height="18.0dip"
                android:layout_marginLeft="20.0dip"
                android:src="@drawable/icon_password"/>

            <EditText
                android:textSize="16.0sp"
                android:textColor="?text_color_1"
                android:textColorHint="?text_color_2"
                android:gravity="start|center"
                android:id="@id/et_password"
                android:background="@null"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_marginLeft="40.0dip"
                android:layout_marginRight="40.0dip"
                android:hint="@string/mi_ma"
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeOptions="actionNext"/>

            <ImageView
                android:layout_gravity="end|center"
                android:id="@id/iv_delete_pass"
                android:background="?press_selector"
                android:padding="16.0dip"
                android:visibility="invisible"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:src="@drawable/icon_password_eyes_visible"
                android:scaleType="fitCenter"/>
        </FrameLayout>
    </LinearLayout>

    <Button
        android:enabled="false"
        android:textSize="18.0sp"
        android:textColor="@color/white"
        android:id="@id/btn_login"
        android:background="?btn_login"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_marginRight="20.0dip"
        android:text="@string/deng_lu"
        style="?android:attr/borderlessButtonStyle"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="?text_color_2"
        android:layout_gravity="center_horizontal"
        android:id="@id/tv_forget_pass"
        android:background="?press_selector"
        android:padding="10.0dip"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:text="@string/forget_password"
        android:onClick="onMyClick"/>
</LinearLayout>