<?xml version="1.0" encoding="utf-8"?>
<com.baiji.jianshu.widget.LinearLayoutDetectSKChange
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/root_linear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?common_bg_white_blacklight"
    android:orientation="vertical">

    <com.baiji.jianshu.widget.JSSwipeRefreshLayout
        android:id="@id/swipelayout_chat"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:background="?common_bg_white_black">

        <ListView
            android:id="@id/listview_chat"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="@color/transparent"
            android:dividerHeight="0.0dip"
            android:listSelector="@color/transparent"/>
    </com.baiji.jianshu.widget.JSSwipeRefreshLayout>

    <View
        android:id="@id/separate_line_bottom"
        android:layout_width="fill_parent"
        android:layout_height="0.6dip"
        android:background="?separate_line_color_2"/>

    <LinearLayout
        android:id="@id/linear_send_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4.0dip"
        android:paddingLeft="10.0dip"
        android:paddingTop="4.0dip">

        <EditText
            android:id="@id/edit_message"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="?shap_rect_gray"
            android:hint="@string/hint_input_content"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:padding="8.0dip"
            android:scrollHorizontally="false"
            android:textColor="?text_color_1"
            android:textColorHighlight="?text_b1_color"
            android:textSize="16.0sp"/>

        <TextView
            android:id="@id/text_post_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4.0dip"
            android:layout_marginRight="4.0dip"
            android:background="?press_selector"
            android:clickable="true"
            android:onClick="onMyClick"
            android:paddingBottom="10.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:paddingTop="10.0dip"
            android:text="@string/fa_song"
            android:textColor="@color/theme_color"
            android:textSize="16.0sp"/>
    </LinearLayout>
</com.baiji.jianshu.widget.LinearLayoutDetectSKChange>