<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/linear_reward_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@id/line_reward_divider"
            android:background="?color_ee_2f"
            android:layout_width="fill_parent"
            android:layout_height="0.39999998dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="27.0dip"
            android:layout_marginRight="16.0dip"/>

        <TextView
            android:textSize="15.0sp"
            android:textColor="?color_99_88"
            android:gravity="center_vertical"
            android:id="@id/reward_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="27.0dip"
            android:layout_marginRight="16.0dip"
            android:text=""
            android:lineSpacingExtra="8.0dip"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@id/linear_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="20.0dip">

            <TextView
                android:textSize="12.0sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/reward"
                android:background="@drawable/shape_rect_yellow"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reward_him"
                android:onClick="onMyClick"/>

            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/ll_avatars_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:onClick="onMyClick">

                <RelativeLayout
                    android:gravity="center"
                    android:id="@id/rl_iv_7"
                    android:background="?shape_circle_common"
                    android:padding="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150.0dip">

                    <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
                        android:id="@id/img_seventh_buyer"
                        android:visibility="gone"
                        android:layout_width="30.5dip"
                        android:layout_height="30.5dip"
                        android:src="@drawable/tx_image"
                        android:scaleType="centerCrop"
                        app:border_width="0.5dip"
                        app:border_color="?gray300"
                        app:oval="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center"
                    android:id="@id/rl_iv_6"
                    android:background="?shape_circle_common"
                    android:padding="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125.0dip">

                    <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
                        android:id="@id/img_sixth_buyer"
                        android:visibility="gone"
                        android:layout_width="30.5dip"
                        android:layout_height="30.5dip"
                        android:src="@drawable/tx_image"
                        android:scaleType="centerCrop"
                        app:border_width="0.5dip"
                        app:border_color="?gray300"
                        app:oval="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center"
                    android:id="@id/rl_iv_5"
                    android:background="?shape_circle_common"
                    android:padding="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100.0dip">

                    <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
                        android:id="@id/img_fifth_buyer"
                        android:visibility="gone"
                        android:layout_width="30.5dip"
                        android:layout_height="30.5dip"
                        android:src="@drawable/tx_image"
                        android:scaleType="centerCrop"
                        app:border_width="0.5dip"
                        app:border_color="?gray300"
                        app:oval="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center"
                    android:id="@id/rl_iv_4"
                    android:background="?shape_circle_common"
                    android:padding="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75.0dip">

                    <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
                        android:id="@id/img_fourth_buyer"
                        android:visibility="gone"
                        android:layout_width="30.5dip"
                        android:layout_height="30.5dip"
                        android:src="@drawable/tx_image"
                        android:scaleType="centerCrop"
                        app:border_width="0.5dip"
                        app:border_color="?gray300"
                        app:oval="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center"
                    android:id="@id/rl_iv_3"
                    android:background="?shape_circle_common"
                    android:padding="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50.0dip">

                    <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
                        android:id="@id/img_third_buyer"
                        android:visibility="gone"
                        android:layout_width="30.5dip"
                        android:layout_height="30.5dip"
                        android:src="@drawable/tx_image"
                        android:scaleType="centerCrop"
                        app:border_width="0.5dip"
                        app:border_color="?gray300"
                        app:oval="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center"
                    android:id="@id/rl_iv_2"
                    android:background="?shape_circle_common"
                    android:padding="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25.0dip">

                    <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
                        android:id="@id/img_second_buyer"
                        android:visibility="gone"
                        android:layout_width="30.5dip"
                        android:layout_height="30.5dip"
                        android:src="@drawable/tx_image"
                        android:scaleType="centerCrop"
                        app:border_width="0.5dip"
                        app:border_color="?gray300"
                        app:oval="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:gravity="center"
                    android:id="@id/rl_iv_1"
                    android:background="?shape_circle_common"
                    android:padding="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
                        android:id="@id/img_first_buyer"
                        android:visibility="gone"
                        android:layout_width="30.5dip"
                        android:layout_height="30.5dip"
                        android:src="@drawable/tx_image"
                        android:scaleType="centerCrop"
                        app:border_width="0.5dip"
                        app:border_color="?gray300"
                        app:oval="true"/>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:textSize="14.0sp"
                android:textColor="?color_99_88"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@id/tv_view_more_reward"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:drawableRight="@drawable/zt_icon_tjbj"
                android:onClick="onMyClick"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@id/line_extra_info_divider"
        android:background="?color_ee_2f"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="27.0dip"
        android:layout_marginRight="16.0dip"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip">

        <TextView
            android:textSize="12.0sp"
            android:textColor="?color_b1_71"
            android:ellipsize="end"
            android:linksClickable="true"
            android:id="@id/text_notebook"
            android:paddingLeft="16.0dip"
            android:paddingTop="12.0dip"
            android:paddingBottom="12.0dip"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="note_book"
            android:singleLine="true"
            android:maxLength="20"
            android:drawableLeft="?icon_wenji_normal"
            android:drawablePadding="4.0dip"
            android:onClick="onMyClick"/>

        <TextView
            android:textSize="12.0sp"
            android:textColor="?color_b1_71"
            android:ellipsize="end"
            android:linksClickable="true"
            android:id="@id/text_collection_sum"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:singleLine="true"
            android:maxLength="20"
            android:drawableLeft="?small_icon_zhuan_ti"
            android:drawablePadding="4.0dip"
            android:layout_toRightOf="@id/text_notebook"
            android:layout_alignBaseline="@id/text_notebook"
            android:onClick="onMyClick"/>
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@id/ll_praise_and_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40.0dip"
        android:layout_marginTop="35.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginBottom="40.0dip">

        <RelativeLayout
            android:id="@id/rl_like"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/rl_wechat">

            <FrameLayout
                android:id="@id/fl_like"
                android:background="?shape_circle_gray300"
                android:layout_width="65.0dip"
                android:layout_height="65.0dip"
                android:layout_margin="10.0dip"
                android:layout_centerHorizontal="true"
                android:onClick="onMyClick">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@id/img_outstand_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/selector_out_stand_like"/>
            </FrameLayout>

            <TextView
                android:textSize="12.0sp"
                android:textColor="?color_b1_71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xi_huan"
                android:layout_below="@id/fl_like"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <TextView
            android:textSize="12.0sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@id/tv_outstand_like_count"
            android:background="@drawable/shape_bubble_12"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60.0dip"
            android:layout_marginTop="10.0dip"
            android:text="9999"
            android:maxLines="1"
            android:maxLength="5"
            android:layout_alignLeft="@id/rl_like"
            android:layout_alignTop="@id/rl_like"/>

        <RelativeLayout
            android:id="@id/rl_wechat"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <FrameLayout
                android:id="@id/fl_wechat_share"
                android:background="?shape_circle_gray300"
                android:layout_width="65.0dip"
                android:layout_height="65.0dip"
                android:layout_margin="10.0dip"
                android:layout_centerHorizontal="true"
                android:onClick="onMyClick">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@id/img_wechat_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_wechat_l"/>
            </FrameLayout>

            <TextView
                android:textSize="12.0sp"
                android:textColor="?color_b1_71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wechat_friends"
                android:layout_below="@id/fl_wechat_share"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/rl_wechat_moment"
            android:layout_width="100.0dip"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rl_wechat">

            <FrameLayout
                android:id="@id/fl_wechat_moments_share"
                android:background="?shape_circle_gray300"
                android:layout_width="65.0dip"
                android:layout_height="65.0dip"
                android:layout_margin="10.0dip"
                android:layout_centerHorizontal="true"
                android:onClick="onMyClick">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@id/img_circle_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_moments_l"/>
            </FrameLayout>

            <TextView
                android:textSize="12.0sp"
                android:textColor="?color_b1_71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wechat_circle"
                android:layout_below="@id/fl_wechat_moments_share"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
</merge>