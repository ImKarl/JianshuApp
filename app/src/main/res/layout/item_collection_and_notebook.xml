<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center_vertical"
                android:orientation="vertical"
                android:background="?press_selector"
                android:padding="16.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
        android:id="@id/image"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:src="@drawable/zt_image"
        android:scaleType="centerCrop"
        app:corner_radius="4.0dip"
        app:border_width="0.0dip"
        app:border_color="@drawable/selector_color_tran_theme"
        app:oval="false"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_toLeftOf="@id/toggle_subscribe"
        android:layout_toRightOf="@id/image">

        <TextView
            android:textSize="16.0sp"
            android:textColor="?text_color_1"
            android:id="@id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"/>

        <TextView
            android:textSize="12.0sp"
            android:textColor="?text_b1_color"
            android:layout_gravity="bottom"
            android:id="@id/info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:singleLine="true"/>
    </LinearLayout>

    <TextView
        android:textSize="12.0sp"
        android:textColor="@drawable/selector_tv_follow"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:id="@id/toggle_subscribe"
        android:background="?selector_shap_guanzhu"
        android:paddingTop="4.0dip"
        android:paddingBottom="4.0dip"
        android:clickable="true"
        android:layout_width="60.0dip"
        android:layout_height="wrap_content"
        android:text="@string/yi_guan_zhu"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:textSize="14.0sp"
        android:textColor="?text_color_2"
        android:ellipsize="end"
        android:id="@id/desc"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:maxLines="3"/>
</RelativeLayout>