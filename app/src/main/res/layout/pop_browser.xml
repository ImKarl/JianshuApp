<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:id="@id/menu_contain"
              android:background="?rectangle_shadow"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/ll_copy_link"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <ImageView
            android:id="@id/iv_copy_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zw_icon_refresh_copy"/>

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_b1_dark"
            android:id="@id/tv_copy_link"
            android:paddingLeft="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/copy_url"/>
    </LinearLayout>

    <View
        android:background="?separate_line_color_1"
        android:layout_width="fill_parent"
        android:layout_height="0.6dip"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/ll_open_browser"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zw_icon_browser"/>

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_b1_dark"
            android:paddingLeft="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_in_web_browser"/>
    </LinearLayout>

    <View
        android:background="?separate_line_color_1"
        android:layout_width="fill_parent"
        android:layout_height="0.6dip"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/ll_share"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zw_icon_share"/>

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_b1_dark"
            android:paddingLeft="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_share"/>
    </LinearLayout>

    <View
        android:id="@id/v_line_private"
        android:background="?separate_line_color_1"
        android:layout_width="fill_parent"
        android:layout_height="0.6dip"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@id/ll_refresh"
        android:paddingLeft="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zw_icon_refresh"/>

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/text_color_b1_dark"
            android:paddingLeft="16.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refresh"/>
    </LinearLayout>
</LinearLayout>