<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingTop="22.0dip"
                android:paddingBottom="22.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@id/img_icon_avatar"
        android:layout_width="35.0dip"
        android:layout_height="35.0dip"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="12.0dip"
        android:scaleType="centerCrop"
        app:riv_border_width="0.0dip"
        app:riv_border_color="@drawable/selector_color_theme_tran"
        app:riv_oval="true"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="?text_color_1"
        android:id="@id/text_noty_comment_name"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.0dip"
        android:layout_marginRight="80.0dip"
        android:text="dfdfdf"
        android:maxLines="2"
        android:layout_toRightOf="@id/img_icon_avatar"
        android:layout_alignTop="@id/img_icon_avatar"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="?text_color_1"
        android:id="@id/text_noty_comment_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:layout_marginRight="5.0dip"
        android:text="向你的专题"
        android:maxLines="5"
        android:layout_below="@id/img_icon_avatar"
        android:layout_alignLeft="@id/img_icon_avatar"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/blue_collection_title"
        android:id="@id/tv_draft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@id/text_noty_comment_action"
        android:layout_below="@id/img_icon_avatar"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="?text_color_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:layout_marginRight="20.0dip"
        android:text="投稿"
        android:layout_toRightOf="@id/tv_draft"
        android:layout_below="@id/img_icon_avatar"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="@color/blue_collection_title"
        android:gravity="center"
        android:id="@id/text_notify_comment_content"
        android:background="?shape_rect_frame"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_below="@id/text_noty_comment_action"
        android:layout_alignLeft="@id/text_noty_comment_action"/>

    <TextView
        android:textSize="12.0sp"
        android:textColor="?text_color_2"
        android:id="@id/text_notify_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="20.0dip"
        android:singleLine="true"
        android:layout_below="@id/text_notify_comment_content"
        android:layout_alignLeft="@id/text_noty_comment_action"/>

    <TextView
        android:id="@id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20.0dip"
        android:layout_alignTop="@id/img_icon_avatar"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@id/linear_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20.0dip"
        android:layout_alignTop="@id/img_icon_avatar"
        android:layout_alignParentRight="true">

        <Button
            android:textSize="14.0sp"
            android:textColor="@color/green_common"
            android:id="@id/btn_notify_accept"
            android:background="@drawable/selector_btn_green_frame"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:layout_width="50.0dip"
            android:layout_height="26.0dip"
            android:layout_marginRight="10.0dip"
            android:text="@string/jie_shou"/>

        <Button
            android:textSize="14.0sp"
            android:textColor="@color/theme_color"
            android:id="@id/btn_notify_reject"
            android:background="@drawable/selector_btn_theme_frame"
            android:paddingLeft="8.0dip"
            android:paddingRight="8.0dip"
            android:layout_width="46.0dip"
            android:layout_height="26.0dip"
            android:text="@string/ju_jue"/>
    </LinearLayout>
</RelativeLayout>