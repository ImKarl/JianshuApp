<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingTop="18.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@id/img_avatar"
        android:layout_width="35.0dip"
        android:layout_height="35.0dip"
        android:layout_marginLeft="15.0dip"
        android:src="@drawable/icon_wechat_default"
        android:scaleType="centerCrop"
        app:riv_border_width="0.0dip"
        app:riv_border_color="@drawable/selector_color_theme_tran"
        app:riv_oval="true"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="?text_color_1"
        android:id="@id/text_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="5.0dip"
        android:text="sdfsdf"
        android:maxLines="2"
        android:layout_toRightOf="@id/img_avatar"
        android:layout_alignTop="@id/img_avatar"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="?text_color_1"
        android:textColorLink="@color/text_blue"
        android:id="@id/text_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:layout_marginRight="15.0dip"
        android:text="contentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontentcontent"
        android:maxLines="5"
        android:layout_below="@id/img_avatar"
        android:layout_alignLeft="@id/img_avatar"/>

    <TextView
        android:textSize="14.0sp"
        android:textColor="?text_color_1"
        android:textColorLink="@color/text_blue"
        android:id="@id/text_extra"
        android:background="?shape_rect_frame"
        android:padding="11.0dip"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dip"
        android:layout_marginRight="15.0dip"
        android:maxLines="5"
        android:layout_below="@id/text_content"
        android:layout_alignLeft="@id/img_avatar"
        android:lineSpacingExtra="4.0dip"/>

    <TextView
        android:textSize="12.0sp"
        android:textColor="?text_color_2"
        android:id="@id/text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.0dip"
        android:text="00:00"
        android:singleLine="true"
        android:layout_below="@id/text_extra"
        android:layout_alignLeft="@id/img_avatar"/>

    <Button
        android:textSize="12.0sp"
        android:textColor="?text_color_1"
        android:id="@id/btn_reply"
        android:background="?selector_btn_gray_frame"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:visibility="invisible"
        android:layout_width="50.0dip"
        android:layout_height="28.0dip"
        android:layout_marginRight="15.0dip"
        android:text="@string/hui_fu"
        android:layout_alignTop="@id/img_avatar"
        android:layout_alignParentRight="true"/>

    <View
        android:background="?separate_line_color"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="18.0dip"
        android:layout_below="@id/text_time"/>
</RelativeLayout>