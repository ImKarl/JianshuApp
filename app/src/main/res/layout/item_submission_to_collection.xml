<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@id/item_root"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?press_selector"
                android:paddingBottom="12.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:paddingTop="12.0dip">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@id/img_collect_icon"
        android:layout_width="33.0dip"
        android:layout_height="33.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/tx_image"
        app:riv_border_color="@drawable/selector_color_theme_tran"
        app:riv_corner_radius="3.0dip"
        app:riv_oval="false"/>

    <TextView
        android:id="@id/text_collection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_collect_icon"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="0.0dip"
        android:layout_toRightOf="@id/img_collect_icon"
        android:ellipsize="end"
        android:maxLength="14"
        android:singleLine="true"
        android:text="title"
        android:textColor="?text_color_1"
        android:textSize="16.0sp"/>

    <TextView
        android:id="@id/text_submission_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_collection_title"
        android:layout_below="@id/text_collection_title"
        android:layout_marginRight="70.0dip"
        android:layout_marginTop="2.0dip"
        android:maxLines="1"
        android:text="@string/info_collection"
        android:textColor="?text_color_2"
        android:textSize="12.0sp"/>

    <TextView
        android:id="@id/text_collection_audit_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_submission_state"
        android:layout_below="@id/text_submission_state"
        android:layout_marginRight="70.0dip"
        android:layout_marginTop="2.0dip"
        android:maxLines="1"
        android:textColor="?text_color_2"
        android:textSize="12.0sp"/>

    <TextView
        android:id="@id/btn_submission_opt"
        android:layout_width="56.0dip"
        android:layout_height="26.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_btn_green_frame"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/tou_gao"
        android:textColor="@color/green_common"
        android:textSize="12.0sp"/>
</RelativeLayout>