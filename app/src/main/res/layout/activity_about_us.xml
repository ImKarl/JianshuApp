<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?common_bg_white_black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50.0dip"
            android:layout_marginLeft="18.0dip"
            android:layout_marginTop="50.0dip"
            android:src="@drawable/seting_aboutus_logo"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"
        android:background="?listview_divider"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="?common_line_divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <TextView
                android:id="@id/tv_profile"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:background="?press_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onMyClick"
                android:paddingLeft="18.0dip"
                android:paddingRight="18.0dip"
                android:text="@string/jian_jie"
                android:textColor="?color_2f_b1"
                android:textSize="16.0sp"/>

            <TextView
                android:id="@id/text_tab_website"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:background="?press_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onMyClick"
                android:paddingLeft="18.0dip"
                android:paddingRight="18.0dip"
                android:text="@string/about_tab_website"
                android:textColor="?color_2f_b1"
                android:textSize="16.0sp"/>

            <TextView
                android:id="@id/text_tab_webchat_account"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:background="?press_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onMyClick"
                android:paddingLeft="18.0dip"
                android:paddingRight="18.0dip"
                android:text="@string/about_tab_wetchat_account"
                android:textColor="?color_2f_b1"
                android:textSize="16.0sp"/>

            <TextView
                android:id="@id/text_tab_sinaweibo"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:background="?press_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onMyClick"
                android:paddingLeft="18.0dip"
                android:paddingRight="18.0dip"
                android:text="@string/about_tab_sinaweibo"
                android:textColor="?color_2f_b1"
                android:textSize="16.0sp"/>

            <TextView
                android:id="@id/text_tab_twitter"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:background="?press_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onMyClick"
                android:paddingLeft="18.0dip"
                android:paddingRight="18.0dip"
                android:text="@string/twitter"
                android:textColor="?color_2f_b1"
                android:textSize="16.0sp"/>

            <TextView
                android:id="@id/text_tab_protocol"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:background="?press_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onMyClick"
                android:paddingLeft="18.0dip"
                android:paddingRight="18.0dip"
                android:text="@string/user_protocol"
                android:textColor="?color_2f_b1"
                android:textSize="16.0sp"/>

            <TextView
                android:id="@id/text_tab_policy"
                android:layout_width="fill_parent"
                android:layout_height="56.0dip"
                android:background="?press_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onMyClick"
                android:paddingLeft="18.0dip"
                android:paddingRight="18.0dip"
                android:text="@string/user_policy"
                android:textColor="?color_2f_b1"
                android:textSize="16.0sp"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@id/text_jianshu_copyright"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/jianshu_copyright"
        android:textColor="@color/theme_color"
        android:textSize="11.0sp"/>
</LinearLayout>