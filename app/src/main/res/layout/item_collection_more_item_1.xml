<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:paddingTop="20.0dip"
              android:paddingBottom="20.0dip"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/avatar"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:src="@drawable/tx_image"
            android:scaleType="centerCrop"
            app:border_width="0.0dip"
            app:border_color="@drawable/selector_color_theme_tran"
            app:oval="true"/>

        <TextView
            android:textSize="8.0sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="bottom|center|right"
            android:id="@id/tv_creator"
            android:background="@drawable/shape_oval_16_frame_theme"
            android:paddingLeft="3.0dip"
            android:paddingRight="3.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creator"/>
    </FrameLayout>

    <TextView
        android:textSize="14.0sp"
        android:textColor="?color_2f_b1"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.0dip"
        android:text="name"/>
</LinearLayout>