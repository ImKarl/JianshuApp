<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/theme_color"
        android:gravity="center_vertical"
        android:paddingLeft="20.0dip"
        android:paddingTop="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/modify_note_book_name"/>

    <TextView
        android:textSize="16.0sp"
        android:textColor="?text_color_1"
        android:gravity="center_vertical"
        android:id="@id/note_name"
        android:background="?press_selector"
        android:paddingLeft="20.0dip"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text=""/>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"/>

    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/theme_color"
        android:gravity="center_vertical"
        android:paddingLeft="20.0dip"
        android:paddingTop="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/article_list"/>

    <TextView
        android:textSize="12.0sp"
        android:textColor="?describe_text_color"
        android:background="?separate_line_color_2"
        android:paddingLeft="20.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="20.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit_note_tips"/>
</LinearLayout>