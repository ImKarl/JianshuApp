<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?common_bg_white_blacklight"
    android:orientation="vertical"
    android:paddingLeft="16.0dip"
    android:paddingRight="16.0dip">

    <TextView
        android:id="@id/text_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.0dip"
        android:background="?shape_rect_fc_2f"
        android:clickable="true"
        android:drawableLeft="?search_bg"
        android:drawablePadding="8.0dip"
        android:hint="@string/hint_search_chat_user"
        android:onClick="onMyClick"
        android:padding="8.0dip"
        android:singleLine="true"
        android:textColor="?text_color_1"
        android:textColorHighlight="?text_b1_color"
        android:textSize="16.0sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16.0dip"
        android:layout_marginTop="16.0dip"
        android:singleLine="true"
        android:text="@string/wo_de_hao_you"
        android:textColor="@color/theme_color"
        android:textSize="12.0sp"/>

    <com.baiji.jianshu.widget.JSSwipeRefreshLayout
        android:id="@id/swipelayout_userlist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.baiji.jianshu.widget.ListViewLisOnBottom
            android:id="@id/listview_userlist"
            style="@style/dimen_mm"
            android:divider="?listview_divider"
            android:dividerHeight="0.5dip"
            android:listSelector="?press_selector"
            android:scrollbarStyle="outsideOverlay"/>
    </com.baiji.jianshu.widget.JSSwipeRefreshLayout>
</LinearLayout>