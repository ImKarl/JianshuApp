<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="12.0sp"
        android:textColor="?text_color_2"
        android:textColorLink="@color/text_blue"
        android:background="?common_bg_lightest"
        android:paddingLeft="12.0dip"
        android:paddingTop="18.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tui_jian_tou_gao"
        android:layout_below="@id/container"/>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/linear_recommend_collections"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="?shap_line"
        android:showDividers="middle"/>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>

    <TextView
        android:textSize="12.0sp"
        android:textColor="?text_color_2"
        android:textColorLink="@color/text_blue"
        android:id="@id/text_mine_collections"
        android:background="?common_bg_lightest"
        android:paddingLeft="12.0dip"
        android:paddingTop="18.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/wo_de_zhuan_ti"
        android:layout_below="@id/container"/>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>
</LinearLayout>