<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="?common_bg_light"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <com.baiji.jianshu.widget.LinearLayoutDetectSKChange
        android:orientation="vertical"
        android:id="@id/linear_rootview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_marginBottom="46.0dip"
            android:src="@drawable/logo_jianshu"
            android:scaleType="fitEnd"
            android:layout_weight="1.0"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_logo">

            <View
                android:background="?separate_line_color"
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"/>

            <EditText
                android:textSize="16.0sp"
                android:textColor="?text_color_1"
                android:textColorHint="?text_color_2"
                android:gravity="start|center"
                android:id="@id/edit_email"
                android:background="@null"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:hint="@string/email_or_mobile_phone"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"/>

            <View
                android:background="?separate_line_color"
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"/>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textSize="16.0sp"
                    android:textColor="?text_color_1"
                    android:textColorHint="?text_color_2"
                    android:gravity="start|center"
                    android:id="@id/edit_password"
                    android:background="@null"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:hint="@string/mi_ma"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"/>

                <ImageView
                    android:layout_gravity="end"
                    android:id="@id/img_find_password"
                    android:background="?press_selector"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="48.0dip"
                    android:src="@drawable/dl_icon_wjmima"
                    android:scaleType="fitCenter"
                    android:onClick="onMyClick"/>
            </FrameLayout>

            <View
                android:background="?separate_line_color"
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"/>

            <Button
                android:textSize="18.0sp"
                android:textColor="@color/selector_color_white_halfwhite"
                android:id="@id/btn_login"
                android:background="@drawable/selector_shap_rect_theme"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_margin="20.0dip"
                android:text="@string/deng_lu"
                android:onClick="onMyClick"/>

            <TextView
                android:textSize="16.0sp"
                android:textColor="?text_color_2"
                android:layout_gravity="center_horizontal"
                android:id="@id/text_social_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/social_deng_lu"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@id/linear_social"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip">

                <FrameLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@id/img_weibo"
                        android:background="?shape_login_icon_circle"
                        android:padding="10.0dip"
                        android:clickable="true"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/icon_sns_weibo"
                        android:onClick="onMyClick"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@id/img_qq"
                        android:background="?shape_login_icon_circle"
                        android:padding="10.0dip"
                        android:clickable="true"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/icon_sns_qq"
                        android:onClick="onMyClick"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@id/img_wechat"
                        android:background="?shape_login_icon_circle"
                        android:padding="10.0dip"
                        android:clickable="true"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/icon_sns_weixin"
                        android:onClick="onMyClick"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@id/img_douban"
                        android:background="?shape_login_icon_circle"
                        android:padding="10.0dip"
                        android:clickable="true"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/icon_sns_douban"
                        android:onClick="onMyClick"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@id/img_google_plus"
                        android:background="?shape_login_icon_circle"
                        android:padding="10.0dip"
                        android:clickable="true"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/icon_sns_google"
                        android:onClick="onMyClick"/>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70.0dip"
                android:layout_marginBottom="10.0dip">

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/theme_color"
                    android:id="@id/text_go_register"
                    android:background="?press_selector"
                    android:padding="10.0dip"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:text="@string/regist_jianshu_account"
                    android:onClick="onMyClick"/>

                <View
                    android:layout_gravity="center_vertical"
                    android:id="@id/view_line"
                    android:background="?separate_line_color"
                    android:layout_width="0.6dip"
                    android:layout_height="20.0dip"/>

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="?text_color_2"
                    android:id="@id/text_go_mainpage"
                    android:background="?press_selector"
                    android:padding="10.0dip"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/dericly_entry"/>
            </LinearLayout>
        </LinearLayout>
    </com.baiji.jianshu.widget.LinearLayoutDetectSKChange>

    <ImageView
        android:layout_gravity="end|center|top"
        android:id="@id/img_close"
        android:background="?press_selector"
        android:padding="8.0dip"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:layout_marginRight="6.0dip"
        android:src="@drawable/tjzt_image_delete_normal"
        android:onClick="onMyClick"/>
</FrameLayout>