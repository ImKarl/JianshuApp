<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:background="?common_bg_light"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/linear_rootview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@id/img_logo"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_marginBottom="46.0dip"
            android:src="@drawable/logo_jianshu"
            android:scaleType="fitEnd"
            android:layout_weight="1.0"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:background="?separate_line_color"
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"/>

            <EditText
                android:textSize="16.0sp"
                android:textColor="?text_color_1"
                android:textColorHint="?text_color_2"
                android:gravity="start|center"
                android:id="@id/edit_nick_name"
                android:background="@null"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:hint="@string/ni_cheng"
                android:singleLine="true"
                android:inputType="textEmailSubject"
                android:imeOptions="actionNext"/>

            <View
                android:background="?separate_line_color"
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"/>

            <EditText
                android:textSize="16.0sp"
                android:textColor="?text_color_1"
                android:textColorHint="?text_color_2"
                android:gravity="start|center"
                android:id="@id/edit_email"
                android:background="@null"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:hint="@string/email_or_mobile_phone"
                android:singleLine="true"
                android:inputType="text"
                android:imeOptions="actionNext"/>

            <View
                android:background="?separate_line_color"
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"/>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textSize="16.0sp"
                    android:textColor="?text_color_1"
                    android:textColorHint="?text_color_2"
                    android:gravity="start|center"
                    android:id="@id/edit_password"
                    android:background="@null"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="48.0dip"
                    android:hint="@string/mi_ma"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"/>

                <ImageView
                    android:layout_gravity="end"
                    android:id="@id/img_password_visiable"
                    android:background="?press_selector"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20.0dip"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="48.0dip"
                    android:src="@drawable/dl_icon_mmbkj"
                    android:scaleType="fitCenter"
                    android:onClick="onMyClick"/>
            </FrameLayout>

            <View
                android:background="?separate_line_color"
                android:layout_width="fill_parent"
                android:layout_height="0.6dip"/>

            <Button
                android:textSize="18.0sp"
                android:textColor="@color/selector_color_white_halfwhite"
                android:id="@id/btn_register"
                android:background="@drawable/selector_shap_rect_theme"
                android:clickable="true"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_margin="20.0dip"
                android:text="@string/regist_jianshu_account"
                android:onClick="onMyClick"/>

            <com.baiji.jianshu.widget.TextViewFixTouchConsume
                android:textSize="12.0sp"
                android:textColor="?text_color_2"
                android:textColorLink="@color/text_blue"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@id/text_policy"
                android:layout_width="250.0dip"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80.0dip"
                android:layout_marginBottom="10.0dip"
                android:divider="?shap_line_vertical">

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/theme_color"
                    android:id="@id/text_go_login"
                    android:background="?press_selector"
                    android:padding="10.0dip"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:text="@string/fan_hui_deng_lu"
                    android:onClick="onMyClick"/>

                <View
                    android:layout_gravity="center_vertical"
                    android:id="@id/line1"
                    android:background="?separate_line_color"
                    android:layout_width="0.6dip"
                    android:layout_height="20.0dip"/>

                <TextView
                    android:textSize="16.0sp"
                    android:textColor="?text_color_2"
                    android:id="@id/text_go_mainpage"
                    android:background="?press_selector"
                    android:padding="10.0dip"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="@string/dericly_entry"
                    android:onClick="onMyClick"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_gravity="end|center|top"
        android:id="@id/img_close"
        android:background="?press_selector"
        android:padding="8.0dip"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:layout_marginRight="6.0dip"
        android:src="@drawable/tjzt_image_delete_normal"
        android:onClick="onMyClick"/>
</FrameLayout>