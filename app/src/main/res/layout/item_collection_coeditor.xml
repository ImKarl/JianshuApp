<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="?press_selector"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="74.0dip">

        <FrameLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18.0dip">

            <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
                android:id="@id/avatar"
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:src="@drawable/tx_image"
                android:scaleType="centerCrop"
                app:oval="true"/>

            <TextView
                android:textSize="5.0sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="bottom|center|right"
                android:id="@id/tv_creator"
                android:background="@drawable/shape_oval_16_frame_theme"
                android:paddingLeft="3.0dip"
                android:paddingRight="3.0dip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/creator"/>
        </FrameLayout>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_weight="1.0"
            android:layout_centerVertical="true">

            <TextView
                android:textSize="16.0sp"
                android:textColor="?color_2f_b1"
                android:ellipsize="end"
                android:id="@id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a"
                android:singleLine="true"/>

            <TextView
                android:textSize="12.0sp"
                android:textColor="?color_99_88"
                android:ellipsize="end"
                android:id="@id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:text="b"
                android:singleLine="true"/>
        </LinearLayout>

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/action_delete"
            android:padding="3.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18.0dip"
            android:src="@drawable/icon_delete_coeditors"/>
    </LinearLayout>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"
        android:layout_alignParentBottom="true"/>
</LinearLayout>