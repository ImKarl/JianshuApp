<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
              android:background="?gray100"
              android:layout_width="fill_parent"
              android:layout_height="48.0dip"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@id/img_insert_image_on_markdown"
                android:background="?press_selector"
                android:layout_width="48.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/image_xiezuo_photo"
                android:scaleType="center"/>

            <ImageView
                android:id="@id/img_font_on_markdown"
                android:background="?press_selector"
                android:layout_width="48.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/selector_icon_font_style"
                android:scaleType="center"/>

            <ImageView
                android:id="@id/img_link_on_markdown"
                android:background="?press_selector"
                android:layout_width="48.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/image_xiezuo_link"
                android:scaleType="center"/>

            <ImageView
                android:id="@id/img_header_on_markdown"
                android:background="?press_selector"
                android:layout_width="48.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/image_xiezuo_header"
                android:scaleType="center"/>

            <ImageView
                android:id="@id/img_emph_on_markdown"
                android:background="?press_selector"
                android:layout_width="48.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/image_xiezuo_emph"
                android:scaleType="center"/>

            <ImageView
                android:id="@id/img_list_on_markdown"
                android:background="?press_selector"
                android:layout_width="48.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/image_xiezuo_list"
                android:scaleType="center"/>

            <ImageView
                android:id="@id/img_undo_on_markdown"
                android:background="?press_selector"
                android:layout_width="48.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/image_editor_undo"
                android:scaleType="center"/>

            <ImageView
                android:id="@id/img_redo_on_markdown"
                android:background="?press_selector"
                android:layout_width="48.0dip"
                android:layout_height="fill_parent"
                android:src="@drawable/image_editor_redo"
                android:scaleType="center"/>
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/image_shadow"
        android:scaleType="center"/>

    <ImageView
        android:layout_gravity="center"
        android:id="@id/img_more_on_markdown"
        android:background="?press_selector"
        android:paddingRight="2.0dip"
        android:layout_width="44.0dip"
        android:layout_height="fill_parent"
        android:src="@drawable/image_editor_menu_more"
        android:scaleType="center"/>
</LinearLayout>