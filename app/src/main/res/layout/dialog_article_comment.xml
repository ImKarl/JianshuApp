<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="?shape_rect_ff_3a"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60.0dip"
        android:layout_marginTop="27.0dip"
        android:layout_marginRight="60.0dip"
        android:src="@drawable/img_guide_pop_like"/>

    <EditText
        android:textSize="14.0sp"
        android:textColor="?color_2f_b1"
        android:textColorHint="?color_99_88"
        android:gravity="center|left|top"
        android:id="@id/input_comment"
        android:background="?shape_rect_fc_2f"
        android:padding="13.0dip"
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_marginLeft="18.0dip"
        android:layout_marginTop="19.0dip"
        android:layout_marginRight="18.0dip"
        android:hint="@string/like_article_comment_hint"
        android:maxLines="40"
        android:inputType="textMultiLine"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@id/ll_like"
        android:paddingTop="15.0dip"
        android:paddingBottom="12.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18.0dip">

        <CheckBox
            android:id="@id/cb_like"
            android:layout_width="12.0dip"
            android:layout_height="12.0dip"
            android:button="@null"
            style="@style/CheckBoxLikeArticleStyle"/>

        <TextView
            android:textSize="12.0sp"
            android:textColor="?color_99_88"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:text="@string/never_show_this_dialog_settings_tips"/>
    </LinearLayout>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"
        android:layout_marginTop="5.0dip"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip">

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/theme_color"
            android:gravity="center"
            android:id="@id/tv_close"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/close"
            android:layout_weight="1.0"/>

        <View
            android:background="?listview_divider"
            android:layout_width="0.39999998dip"
            android:layout_height="fill_parent"/>

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/theme_color"
            android:gravity="center"
            android:id="@id/tv_publish_comment"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/publish_comment"
            android:layout_weight="1.0"/>
    </LinearLayout>
</LinearLayout>