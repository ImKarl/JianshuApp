<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="18.0dip"
        android:paddingRight="18.0dip"
        android:layout_width="fill_parent"
        android:layout_height="96.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
                android:id="@id/img_avatar"
                android:layout_width="33.0dip"
                android:layout_height="33.0dip"
                android:src="@drawable/tx_image"
                android:scaleType="centerCrop"
                app:border_width="0.30000007dip"
                app:border_color="?gray300"
                app:oval="true"/>

            <TextView
                android:textSize="16.0sp"
                android:textColor="?color_2f_b1"
                android:ellipsize="end"
                android:id="@id/tv_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:text="hello"
                android:singleLine="true"
                android:layout_toRightOf="@id/img_avatar"
                android:layout_alignTop="@id/img_avatar"/>

            <TextView
                android:textSize="12.0sp"
                android:textColor="?color_99_88"
                android:id="@id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:text="hello"
                android:singleLine="true"
                android:layout_below="@id/tv_reward"
                android:layout_alignLeft="@id/tv_reward"/>

            <TextView
                android:textSize="12.0sp"
                android:textColor="?text_color_2"
                android:id="@id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:text="hello"
                android:singleLine="true"
                android:layout_below="@id/tv_message"
                android:layout_alignLeft="@id/tv_message"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>
</LinearLayout>