<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/item_root"
                android:background="?press_selector"
                android:paddingLeft="16.0dip"
                android:paddingTop="18.0dip"
                android:paddingRight="16.0dip"
                android:paddingBottom="18.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="70.0dip"
        android:layout_centerVertical="true">

        <TextView
            android:textSize="15.0sp"
            android:textColor="?text_color_1"
            android:textColorLink="@color/text_blue"
            android:ellipsize="end"
            android:id="@id/text_submission_record"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:text="text"
            android:layout_toRightOf="@id/img_collect_icon"
            android:layout_alignTop="@id/img_collect_icon"/>

        <TextView
            android:textSize="12.0sp"
            android:textColor="?text_color_2"
            android:id="@id/text_submission_state"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2.0dip"
            android:text="state"
            android:maxLines="1"
            android:layout_below="@id/text_submission_record"
            android:layout_alignLeft="@id/text_submission_record"/>
    </LinearLayout>

    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/green_common"
        android:gravity="center"
        android:id="@id/btn_submission_opt"
        android:background="@drawable/selector_btn_green_frame"
        android:clickable="true"
        android:layout_width="56.0dip"
        android:layout_height="26.0dip"
        android:text="@string/tou_gao"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>