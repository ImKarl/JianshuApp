<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18.0dip"
        android:paddingRight="18.0dip"
        android:layout_width="fill_parent"
        android:layout_height="54.0dip">

        <com.baiji.jianshu.view.rounded_imageview.RoundedImageView
            android:id="@id/img_collect_icon"
            android:layout_width="33.0dip"
            android:layout_height="33.0dip"
            android:src="@drawable/tx_image"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:border_width="1.0dip"
            app:border_color="@drawable/selector_color_theme_tran"
            app:oval="true"/>

        <TextView
            android:textSize="16.0sp"
            android:textColor="?color_2f_b1"
            android:ellipsize="end"
            android:id="@id/text_collection_title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:text="title"
            android:singleLine="true"
            android:maxLength="14"
            android:layout_weight="1.0"/>

        <TextView
            android:textSize="12.0sp"
            android:textColor="@color/theme_color"
            android:id="@id/text_collection_operation"
            android:background="@drawable/selector_btn_theme_frame"
            android:paddingLeft="10.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="4.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tian_jia"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </LinearLayout>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>
</LinearLayout>