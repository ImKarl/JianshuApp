<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="?common_bg_white_black"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60.0dip"
        android:layout_marginTop="44.0dip"
        android:layout_marginRight="60.0dip"
        android:src="@drawable/img_guide_pop_success"/>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"
        android:layout_marginTop="44.0dip"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip">

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/theme_color"
            android:gravity="center"
            android:id="@id/tv_close"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/close"
            android:layout_weight="1.0"/>

        <View
            android:id="@id/vertical_divider"
            android:background="?listview_divider"
            android:layout_width="0.39999998dip"
            android:layout_height="fill_parent"/>

        <TextView
            android:textSize="16.0sp"
            android:textColor="@color/theme_color"
            android:gravity="center"
            android:id="@id/tv_view_record"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="@string/view_reward_record"
            android:layout_weight="1.0"/>
    </LinearLayout>
</LinearLayout>