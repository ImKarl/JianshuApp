<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:orientation="vertical"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="18.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="18.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/img_user"
            android:padding="9.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_recommend_user_banner"
            android:scaleType="centerCrop"
            android:layout_weight="1.0"/>

        <ImageView
            android:id="@id/img_collection"
            android:padding="9.0dip"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.0dip"
            android:src="@drawable/icon_recommend_collection_banner"
            android:scaleType="centerCrop"
            android:layout_weight="1.0"/>
    </LinearLayout>

    <View
        android:layout_gravity="bottom"
        android:id="@id/bottom_line"
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>
</FrameLayout>