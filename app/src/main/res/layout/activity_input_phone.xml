<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:id="@id/root_view"
              android:background="?common_bg_light"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:background="?separate_line_color"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"
        android:layout_marginTop="20.0dip"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip">

        <TextView
            android:id="@id/tv_country_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:text="+86"
            android:onClick="onMyClick"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@id/iv_phone_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:src="@drawable/icon_phone_arrow"
            android:onClick="onMyClick"/>

        <View
            android:layout_gravity="center_vertical"
            android:background="?separate_line_color"
            android:layout_width="0.6dip"
            android:layout_height="20.0dip"
            android:layout_marginLeft="10.0dip"/>

        <EditText
            android:textSize="16.0sp"
            android:textColor="?text_color_1"
            android:textColorHint="?text_color_2"
            android:gravity="center|left"
            android:id="@id/edit_email_findback"
            android:background="@null"
            android:paddingLeft="10.0dip"
            android:paddingRight="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:hint="@string/input_phone_number"
            android:singleLine="true"
            android:inputType="phone"
            android:imeOptions="actionDone"/>
    </LinearLayout>

    <View
        android:background="?separate_line_color"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>

    <Button
        android:textSize="18.0sp"
        android:textColor="@color/white"
        android:id="@id/btn_send_code"
        android:background="@drawable/selector_shap_rect_theme"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip"
        android:layout_margin="20.0dip"
        android:text="@string/send_phone_verify_number"
        android:layout_centerHorizontal="true"
        android:onClick="onMyClick"/>
</LinearLayout>