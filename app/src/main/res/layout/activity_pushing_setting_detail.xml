<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="?common_bg_white_black"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:textSize="12.0sp"
        android:textColor="@color/theme_color"
        android:id="@id/tv_title"
        android:background="?color_fc_3a"
        android:paddingLeft="18.0dip"
        android:paddingTop="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="dfdfdfdf"/>

    <TextView
        android:textSize="12.0sp"
        android:textColor="?color_b1_71"
        android:id="@id/tv_desc"
        android:background="?color_fc_3a"
        android:paddingLeft="18.0dip"
        android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="dfdfd"/>

    <View
        android:background="?listview_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>

    <com.baiji.jianshu.base.widgets.AutoFlipOverListView
        android:id="@id/list"
        android:background="?color_fc_3a"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:listSelector="?press_selector"
        android:divider="@null"
        android:dividerHeight="0.0dip"/>

    <View
        android:id="@id/line_end"
        android:background="?listview_divider"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0.39999998dip"/>
</LinearLayout>