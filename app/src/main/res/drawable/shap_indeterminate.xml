<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="0.0"
            android:pivotX="50.0%"
            android:pivotY="50.0%"
            android:toDegrees="1080.0">
            <shape
                android:innerRadiusRatio="2.5"
                android:shape="ring"
                android:thicknessRatio="25.0">
                <gradient
                    android:centerColor="@color/theme_color"
                    android:endColor="@color/theme_color"
                    android:startColor="@color/theme_color"
                    android:type="linear"/>
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="720.0"
            android:pivotX="50.0%"
            android:pivotY="50.0%"
            android:toDegrees="0.0">
            <shape
                android:innerRadiusRatio="2.5"
                android:shape="ring"
                android:thicknessRatio="25.0">
                <gradient
                    android:centerColor="@color/half_transaction_light"
                    android:endColor="@color/half_transaction_light"
                    android:startColor="@color/theme_color_half"
                    android:type="sweep"/>
            </shape>
        </rotate>
    </item>
</layer-list>