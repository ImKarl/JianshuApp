<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="theme_day_opaque" parent="@style/theme_day">
        <!-- 不透明主题 -->
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>



    <style name="CustomCirclePageIndicator">
        <item name="centered">true</item>
        <item name="strokeWidth">2.0dip</item>
        <item name="fillColor">#ff888888</item>
        <item name="radius">10.0dip</item>
        <item name="strokeColor">#ff000000</item>
    </style>
    <style name="CustomLinePageIndicator">
        <item name="selectedColor">#ff880000</item>
        <item name="strokeWidth">4.0dip</item>
        <item name="unselectedColor">#ff888888</item>
        <item name="lineWidth">30.0dip</item>
    </style>
    <style name="CustomTabPageIndicator" parent="@style/Widget.TabPageIndicator">
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@drawable/selector_color_theme_gray</item>
        <item name="android:textColorHighlight">@color/theme_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?viewpager_indicator_bg</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingTop">12.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:paddingBottom">12.0dip</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8.0dip</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">4.0dip</item>
    </style>
    <style name="CustomTabPageIndicator.Text" parent="@android:style/TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>
    <style name="CustomTitlePageIndicator">
        <item name="android:textColor">#aa000000</item>
        <item name="android:background">#18ff0000</item>
        <item name="selectedColor">#ff000000</item>
        <item name="footerColor">#ffaa2222</item>
        <item name="footerLineHeight">1.0dip</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="footerIndicatorHeight">3.0dip</item>
        <item name="selectedBold">true</item>
    </style>
    <style name="CustomUnderlinePageIndicator">
        <item name="android:background">#ffcccccc</item>
        <item name="selectedColor">#ffcc0000</item>
        <item name="fadeDelay">1000</item>
        <item name="fadeLength">1000</item>
    </style>
    <style name="StyledIndicators" parent="@style/Base.V7.Theme.AppCompat.Light">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
    </style>
    <style name="StyledIndicators.Dark" parent="@style/Base.V7.Theme.AppCompat">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
    </style>
    <style name="DropdownPopupWindow" parent="@android:style/Widget.ListPopupWindow">
        <item name="android:popupBackground">@drawable/dropdown_popup_background</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="@style/theme_day">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CheckBoxLikeArticleStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_cb_icon_like</item>
    </style>
    <style name="CheckboxSelectedStyle" parent="@style/Theme.AppCompat">
        <item name="android:textColorSecondary">@color/red</item>
        <item name="colorAccent">@color/green</item>
    </style>
    <style name="CommonAlertDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/text_gray</item>
        <item name="android:textColorSecondary">?describe_text_color</item>
        <item name="android:textColor">?text_color_1</item>
        <item name="android:background">?common_bg_white_black</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="textColorAlertDialogListItem">?describe_text_color</item>
    </style>
    <style name="CustomAlertDialogStyle" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/text_gray</item>
        <item name="android:windowBackground">?common_bg_white_black</item>
        <item name="android:textColor">?text_color_1</item>
        <item name="windowMinWidthMajor">90.0%</item>
        <item name="windowMinWidthMinor">90.0%</item>
        <item name="colorAccent">@color/theme_color</item>
    </style>
    <style name="DarkPopupMenuStyle" parent="@style/Widget.AppCompat.ListPopupWindow">
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>
    <style name="DarkPopupMenuWithoutAnimStyle" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:dropDownVerticalOffset">2.0dip</item>
    </style>
    <style name="EditTextTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/theme_color</item>
        <item name="colorControlActivated">@color/theme_color</item>
        <item name="colorControlHighlight">@color/theme_color</item>
    </style>
    <style name="LightPopupMenuStyle" parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>
    <style name="LightPopupMenuWithoutAnimStyle" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_light_background</item>
        <item name="android:dropDownVerticalOffset">2.0dip</item>
    </style>
    <style name="MyABmenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="MySimpleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="MyTitleTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slid_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slid_bottom_out</item>
    </style>
    <style name="PopupAnimationFadeIn" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>
    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TabLayoutStyle" parent="@style/Widget.Design.TabLayout">
        <item name="android:textColor">?text_color_2</item>
        <item name="android:gravity">center</item>
        <item name="tabIndicatorColor">@color/theme_color</item>
        <item name="tabIndicatorHeight">2.0dip</item>
        <item name="tabBackground">?selectableItemBackground</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0.0dip</item>
        <item name="tabTextAppearance">@style/TabTextAppearance2</item>
        <item name="tabSelectedTextColor">@color/theme_color</item>
        <item name="tabPaddingStart">20.0dip</item>
        <item name="tabPaddingEnd">20.0dip</item>
    </style>
    <style name="TabTextAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">?text_color_2</item>
    </style>
    <style name="TabTextAppearance2" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">?text_color_2</item>
    </style>
    <style name="Theme.TransparentActivity" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="ThemeNightOpaque" parent="@style/theme_night">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="Toolbar.TitleText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16.0sp</item>
    </style>
    <style name="checkBoxComponent" parent="@style/AppTheme">
        <item name="android:textColorSecondary">@color/color_99</item>
        <item name="colorAccent">@color/theme_color</item>
    </style>
    <style name="dimen_mm">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="dimen_mw">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="dimen_wm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="dimen_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="half_transparent_day" parent="@style/theme_transparent_day">
        <item name="android:windowBackground">@color/half_transaction</item>
    </style>
    <style name="half_transparent_night" parent="@style/theme_transparent_night">
        <item name="android:windowBackground">@color/half_transaction</item>
    </style>
    <style name="share_item">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">?text_color_1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">?press_selector</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">4.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="text_12_gray" parent="@style/dimen_ww">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="text_12_white" parent="@style/dimen_ww">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="theme_no_actionbar" parent="@style/Theme.AppCompat.Light.NoActionBar" />
    <style name="theme_transparent_day" parent="@style/theme_day">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="theme_transparent_night" parent="@style/theme_night">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
